<div class="home_form">
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %>
        prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
  <legend>Enter User Details</legend>
<table id="one-column-emphasis">
    <colgroup>
    	<col class="oce-first" />
    </colgroup>
    <tbody>
   	<tr>
  <div>
    <td><%= f.label :name, 'User Name' %></td>
    <td><%= f.text_field :name,:class=>'title'%></td>
  </div>
</tr>
<tr>
  <div>
    <td><%= f.label :password, 'Password' %></td>
    <td><%= f.password_field :password, :size => 20,:class=>'title' %></td>
  </div>
</tr>
<tr>
  <div>
	  <td><%= f.label :password_confirmation, 'Confirm' %></td>
      <td><%= f.password_field :password_confirmation, :size => 20,:class=>'title'%></td>
  </div>
</tr>
<tr>
  <div>
	<td></td>
   <td><%= f.submit "Save"%></td>
  </div>
</tr>
    </tbody>
</table>
</fieldset>
<% end %>
</div>
