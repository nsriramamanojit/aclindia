<h1>Search Results</h1>
<% if @cities.blank? %>
 	<p>Oops!!! No Matches found.</p>
<% else %>
<table id="newspaper-b">
    <thead>
    	<tr>
        	<th scope="col">City</th>
        	<th scope="col">State</th>
        	<th scope="col">Country</th>
            <th scope="col">View</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
 
        </tr>
    </thead>
         <tfoot>
    	<tr>
        	<td colspan="6"></td>
        </tr>
    </tfoot>
<% @cities.each do |city| %>
  <tr>
    <td><%= city.name %></td>
    <td><%= city.state.name %></td>
    <td><%= city.country.name %></td>
    <td><%= link_to 'View', city %></td>
    <td><%= link_to 'Edit', edit_city_path(city) %></td>
    <td><%= link_to 'Delete', city, :confirm => 'Are you sure?',
       :method => :delete %></td>
  </tr>
<% end %>
</table>
<% end %>
<%= link_to 'Back to Cities', cities_path %>
