<h1>Search Regional Labs</h1>
<!--Start of search text box -->
<%= form_tag :action => 'search' %>
	<table id="one-column-emphasis">
    <colgroup>
    	<col class="oce-first" />
    </colgroup>
	<tr>
		<td>Search</td>
		<td><%= text_field_tag :query ,@query ||="Enter Regional/Central Lab Name",:class=>'title',
:onfocus=>"javascript: this.value=''",:onblur=>"javascript: if(this.value=='') this.value='Enter Regional/Central Lab Name'" %></td>
		<td><%= submit_tag "Search" %></td>
	</tr>
	</table>
<%= form_tag %>
<!--end of search text box -->
<h1>Listing Regional Labs</h1>
<!-- START_HIGHLIGHT -->
  <% if notice %>
    <p id="notice"><%= notice %></p>
  <% end %>
<!-- END_HIGHLIGHT -->
<table id="newspaper-b">
    <thead>
    	<tr>
        	<th scope="col">Regional</th>
        	<th scope="col">Central</th>
            <th scope="col">View</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
 
        </tr>
    </thead>
         <tfoot>
    	<tr>
        	<td colspan="3"><%= will_paginate @labregionals %></td>
			<td colspan="2"><%= link_to 'Download Report (PDF)', :action=> 'show' ,:format=> "pdf" %></td>
        </tr>
    </tfoot>
<% @labregionals.each do |labregional| %>
   <tr>
    <td><%= labregional.labname %></td>
    <td><%= labregional.labcentral.labname %></td>
    <td><%= link_to 'View', {:action => 'view', :id => labregional.id} %></td>
    <td><%= link_to 'Edit', edit_labregional_path(labregional) %></td>
    <td><%= link_to 'Delete', labregional, :confirm => 'Are you sure?',
       :method => :delete %></td>
  </tr>
<% end %>
</table>
<%= link_to 'New Regional Lab', new_labregional_path, :class=>"more" %>
